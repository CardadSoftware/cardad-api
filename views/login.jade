extends layout

block content
  .container
    h1 Login Page
    p.lead Please login to use Cardad
    br
    form(role='form', action = redirect === undefined ? "/login" : ("/login?redirect=" + redirect) ,method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      button.btn.btn-default.m1(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary.m1(type="button") Cancel
      a(href='/register')
        button.btn.btn-primary.m-1(type="button") Sign-Up